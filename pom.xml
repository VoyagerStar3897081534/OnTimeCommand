<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.VoyagerStar</groupId>
    <artifactId>ontimecommand</artifactId>
    <version>1.1.0</version>
    <packaging>jar</packaging>

    <scm>
        <connection>scm:git:https://github.com/VoyagerStar3897081534/OnTimeCommand.git</connection>
        <developerConnection>scm:git:https://github.com/VoyagerStar3897081534/OnTimeCommand.git</developerConnection>
        <url>https://github.com/VoyagerStar3897081534/OnTimeCommand</url>
        <tag>HEAD</tag>
    </scm>

    <properties>
        <java.version>21</java.version>
        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!-- Load external properties file -->
        <maven.properties.file>maven.properties</maven.properties.file>
        <!-- Version properties - major.minor.patch-packageType+yyyyMMdd+gitnumber -->
        <!-- Custom timestamp format for versioning -->
        <maven.build.timestamp.format>yyyyMMdd</maven.build.timestamp.format>
        <!-- Define the project version format as per requirements -->
        <!-- Conditional version suffix based on package type -->
        <!-- For release/stable: only version-packageType -->
        <!-- For alpha/beta: version-packageType+timestamp+buildNumber -->
        <!--suppress UnresolvedMavenProperty -->
        <version.suffix.release/>
        <!--suppress UnresolvedMavenProperty -->
        <version.suffix.stable/>
        <!--suppress UnresolvedMavenProperty -->
        <version.suffix.alpha>+${maven.build.timestamp}${buildNumber}</version.suffix.alpha>
        <!--suppress UnresolvedMavenProperty -->
        <version.suffix.beta>+${maven.build.timestamp}${buildNumber}</version.suffix.beta>
        <!--suppress UnresolvedMavenProperty -->
        <version.suffix.default>+${maven.build.timestamp}${buildNumber}</version.suffix.default>
        <!--suppress UnresolvedMavenProperty -->
        <conditional.version.suffix>${version.suffix.${versionPackageType}}</conditional.version.suffix>
        <!--suppress UnresolvedMavenProperty -->
        <project.version>${versionNumber}-${versionPackageType}${conditional.version.suffix}</project.version>
        <!--suppress UnresolvedMavenProperty -->
        <project.url>${website}</project.url>
        <project.description>${description}</project.description>
        <!--suppress UnresolvedMavenProperty -->
        <project.versionAPIURL>${versionAPIURL}</project.versionAPIURL>
        <!-- JVM 参数配置以处理 Java 21 的警告 -->
        <maven.compiler.args>--add-opens java.base/java.lang=ALL-UNNAMED --add-opens
            java.base/java.lang.reflect=ALL-UNNAMED --add-opens java.base/java.util=ALL-UNNAMED --add-opens
            java.base/java.util.concurrent=ALL-UNNAMED --add-opens java.base/sun.nio.ch=ALL-UNNAMED --add-opens
            java.management=ALL-UNNAMED --add-opens java.base/sun.util.calendar=ALL-UNNAMED --add-opens
            java.base/java.security=ALL-UNNAMED --enable-native-access=ALL-UNNAMED
        </maven.compiler.args>
    </properties>

    <build>
        <defaultGoal>clean package</defaultGoal>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.13.0</version>
                <configuration>
                    <release>${java.version}</release>
                    <compilerArgs>
                        <arg>--add-opens</arg>
                        <module>java.base/java.lang=ALL-UNNAMED</module>
                        <arg>--add-opens</arg>
                        <module>java.base/java.lang.reflect=ALL-UNNAMED</module>
                        <arg>--add-opens</arg>
                        <module>java.base/java.util=ALL-UNNAMED</module>
                        <arg>--add-opens</arg>
                        <module>java.base/java.util.concurrent=ALL-UNNAMED</module>
                        <arg>--add-opens</arg>
                        <module>java.base/sun.nio.ch=ALL-UNNAMED</module>
                        <arg>--add-opens</arg>
                        <module>java.management=ALL-UNNAMED</module>
                        <arg>--add-opens</arg>
                        <module>java.base/sun.util.calendar=ALL-UNNAMED</module>
                        <arg>--add-opens</arg>
                        <module>java.base/java.security=ALL-UNNAMED</module>
                    </compilerArgs>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.5.3</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <finalName>${project.artifactId}-${project.version}</finalName>
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>module-info.class</exclude>
                                        <exclude>META-INF/MANIFEST.MF</exclude>
                                        <exclude>META-INF/maven/**</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>properties-maven-plugin</artifactId>
                <version>1.2.1</version>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <goals>
                            <goal>read-project-properties</goal>
                        </goals>
                        <configuration>
                            <files>
                                <file>${project.basedir}/maven.properties</file>
                            </files>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>buildnumber-maven-plugin</artifactId>
                <version>3.2.0</version>
                <executions>
                    <execution>
                        <id>get-git-info</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>create</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <doCheck>false</doCheck>
                    <doUpdate>false</doUpdate>
                    <revisionOnScmFailure>unknown</revisionOnScmFailure>
                    <shortRevisionLength>8</shortRevisionLength>
                    <buildNumberPropertyName>buildNumber</buildNumberPropertyName>
                </configuration>
            </plugin>
            <!-- Surefire 插件配置以处理测试执行时的警告 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.2.5</version>
                <configuration>
                    <argLine>--add-opens java.base/java.lang=ALL-UNNAMED --add-opens java.base/java.util=ALL-UNNAMED
                        --add-opens java.base/java.lang.reflect=ALL-UNNAMED --add-opens
                        java.base/java.util.concurrent=ALL-UNNAMED --enable-native-access=ALL-UNNAMED
                    </argLine>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.3.0</version>
                <configuration>
                    <!--suppress UnresolvedMavenProperty -->
                    <finalName>
                        ${project.artifactId}-${versionNumber}-${versionPackageType}${version.suffix}
                    </finalName>
                    <archive>
                        <manifestEntries>
                            <Build-Timestamp>${maven.build.timestamp}</Build-Timestamp>
                            <!--suppress UnresolvedMavenProperty -->
                            <Build-Jdk>${maven.compiler.target}</Build-Jdk>
                            <Build-OS>${os.name}</Build-OS>
                            <Created-By>${maven.version}</Created-By>
                            <Git-Commit-Id>${buildNumber}</Git-Commit-Id>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>

    <repositories>
        <repository>
            <id>papermc-repo</id>
            <url>https://repo.papermc.io/repository/maven-public/</url>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>github</id>
            <name>GitHub VoyagerStar3897081534 Apache Maven Packages</name>
            <url>https://maven.pkg.github.com/VoyagerStar3897081534/OnTimeCommand</url>
        </repository>
    </distributionManagement>

    <dependencies>
        <dependency>
            <groupId>io.papermc.paper</groupId>
            <artifactId>paper-api</artifactId>
            <version>1.21-R0.1-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
        <!-- Upgrade commons-lang3 to fix CVE-2025-48924 -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.18.0</version>
        </dependency>
        <!-- Upgrade gson to fix CVE-2022-25647 and WS-2021-0419 -->
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>2.8.9</version>
        </dependency>
        <!-- JUnit 5 for testing -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>5.10.0</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <profiles>
        <!-- Release profile - no timestamp or build number -->
        <profile>
            <id>release</id>
            <activation>
                <property>
                    <name>versionPackageType</name>
                    <value>release</value>
                </property>
            </activation>
            <properties>
                <version.suffix/>
            </properties>
        </profile>

        <!-- Stable profile - no timestamp or build number -->
        <profile>
            <id>stable</id>
            <activation>
                <property>
                    <name>versionPackageType</name>
                    <value>stable</value>
                </property>
            </activation>
            <properties>
                <version.suffix/>
            </properties>
        </profile>

        <!-- Alpha profile - includes timestamp and build number -->
        <profile>
            <id>alpha</id>
            <activation>
                <property>
                    <name>versionPackageType</name>
                    <value>alpha</value>
                </property>
            </activation>
            <properties>
                <version.suffix>+${maven.build.timestamp}${buildNumber}</version.suffix>
            </properties>
        </profile>

        <!-- Beta profile - includes timestamp and build number -->
        <profile>
            <id>beta</id>
            <activation>
                <property>
                    <name>versionPackageType</name>
                    <value>beta</value>
                </property>
            </activation>
            <properties>
                <version.suffix>+${maven.build.timestamp}${buildNumber}</version.suffix>
            </properties>
        </profile>

        <!-- Default profile - includes timestamp and build number -->
        <profile>
            <id>default</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <version.suffix>+${maven.build.timestamp}${buildNumber}</version.suffix>
            </properties>
        </profile>
    </profiles>
</project>